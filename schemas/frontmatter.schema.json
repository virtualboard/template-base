{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "title", "status", "created", "updated"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^FTR-\\d{4}$",
      "description": "Unique feature identifier"
    },
    "title": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "description": "Feature title"
    },
    "status": {
      "type": "string",
      "enum": ["backlog", "in-progress", "blocked", "review", "done"],
      "description": "Current feature status"
    },
    "owner": {
      "type": "string",
      "description": "Current owner (human or agent handle)"
    },
    "priority": {
      "type": "string",
      "enum": ["P0", "P1", "P2", "P3"],
      "description": "Feature priority level"
    },
    "complexity": {
      "type": "string",
      "enum": ["XS", "S", "M", "L", "XL"],
      "description": "Feature complexity estimate"
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "labels": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "maxItems": 10,
      "description": "Feature labels (kebab-case)"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^FTR-\\d{4}$"
      },
      "description": "Feature dependencies"
    },
    "epic": {
      "type": "string",
      "pattern": "^EP-\\d{4}$",
      "description": "Epic identifier"
    },
    "risk_notes": {
      "type": "string",
      "maxLength": 500,
      "description": "Risk assessment notes"
    }
  },
  "additionalProperties": false
}
